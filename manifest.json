{
  "manifest_version": 2,

  "name": "deck",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  
  "permissions": [
    "activeTab",
    "storage",
	"tabs",
	"<all_urls>",
	{ "fileSystem": ["write"] }
  ]
}
